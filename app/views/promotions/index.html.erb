<h3>Listing promotions</h3>

<table id="promotionsDT">
<thead>  <tr>
    <th>Date</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Rank tested</th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @promotions.each do |promotion| %>
  <% student = Student.find(promotion.student_id) %>
  <tr>
    <td align="center"><%= promotion.testdate.strftime("%b-%d-%Y") %></td>
    <td align="center"><%= link_to student.firstname, promotion %></td>
    <td align="center"><%= link_to student.lastname, promotion %></td>
    <td align="center"><%= Rank.find(promotion.rank_id).name %></td>
    <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
    <td><%= link_to 'Delete', promotion, :confirm => "Are you sure you want to delete the #{Rank.find(promotion.rank_id).name} promotion for #{Student.find(promotion.student_id).fullname}?", :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<p>

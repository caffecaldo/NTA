<h3>Listing ranks</h3>

<table id="basicDT">
<thead>
  <tr>
    <th>Seq.</th>
    <th>Rank</th>
    <th>Class Hours Req'd</th>
    <th>Calendar Months Req'd</th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @ranks.each do |rank| %>
  <tr>
    <td align="center"><%= rank.seq %></td>
    <td><%= link_to rank.name, rank %></td>
    <td align="center"><%= rank.class_hours_required %></td>
    <td align="center"><%= rank.cal_months_required %></td>
    <td><%= link_to 'Edit', edit_rank_path(rank), :confirm => 'Are you sure? Changing the sequence could make a mess of things.' %></td>
    <td><%= link_to 'Delete', rank, :confirm => 'Are you sure you want to delete this rank? Deleting could make a mess of other parts of the system. (You might want to edit instead.)', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
<p>
<br />

<%= link_to 'New Rank', new_rank_path %>

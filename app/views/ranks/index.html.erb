<h1>Listing ranks</h1>

<table>
  <tr>
    <th>Seq.</th>
    <th>Name</th>
    <th>Days</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ranks.each do |rank| %>
  <tr>
    <td><%= rank.order %></td>
    <td><%= rank.name %></td>
    <td><%= rank.days_required %></td>
    <td><%= link_to 'Show', rank %></td>
    <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
    <td><%= link_to 'Delete', rank, :confirm => 'Are you sure you want to delete this rank? (You might want to edit instead.)', :method => :delete %></td>
  </tr>
<% end %>
</table>


<h1>Listing tests</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Student</th>
    <th>Rank tested</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td><%= test.date.strftime("%m/%d/%Y") %></td>
    <td><%= Student.find(test.student_id).fullname %></td>
    <td><%= Rank.find(test.rank_id).name %></td>
    <td><%= link_to 'Show', test %></td>
    <td><%= link_to 'Edit', edit_test_path(test) %></td>
    <td><%= link_to 'Delete', test, :confirm => "Are you sure you want to delete the #{Rank.find(test.rank_id).name} test for #{Student.find(test.student_id).fullname}?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Test', new_test_path %>
<p></p>

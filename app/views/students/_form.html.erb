<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :middle_name %>
    <%= f.text_field :middlename %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :address_1 %>
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address_2 %>
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :address_3 %>
    <%= f.text_field :address3 %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :birthdate %>
    <%= f.date_select :birthdate, :start_year => Time.now.year - 100, :end_year => Time.now.year, :order =>[:month, :day, :year] %>
  </div>
  <div class="field" >
	<%= f.label :rank %>
    <%= collection_select( :student, :rank_id, Rank.all, :id, :name ) %>
  </div>
  <div class="field">
    <%= f.label :days_carry_forward %>
    <%= f.text_field :days_carry_forward, :size => "5" %>
  </div>
  <div class="field">
    <%= f.label :sticky_listing %>
    <%= f.check_box :sticky_listing %>
  </div>
  <div class="field">
    <%= f.label :do_not_disturb %>
    <%= f.check_box :do_not_disturb %>
  </div>
  <div class="field">
    <%= f.label :additional_notes %><br />
    <%= f.text_area :additional_notes, :size => "60x4" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

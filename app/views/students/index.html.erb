<h3>Listing students</h3>

<%= link_to 'New Student', new_student_path %>
<p></p>

<table id="studentsDT">
<thead>
  <tr>
    <th>Rank</th>
    <th>First</th>
    <th>Last</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<tbody>
<% @students.each do |student| %>
  <tr>
    <% rank = Ranktest.where(:student_id => student.id).order(:testdate).last %>
    <% if rank.nil? %>
      <% rank_id = student.rank_id %>
    <% else %>
      <% rank_id = rank.rank_id %>
    <% end %>
    <td align="center"><%= Rank.find(rank_id).name %></td>
    <td><%= link_to student.firstname, student %></td>
    <td><%= link_to student.lastname, student %></td>
    <td><a href=mailto:<%= student.email %>><%= student.email %></a></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Delete', student, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>


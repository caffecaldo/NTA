<h1>Listing rank tests</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Student</th>
    <th>Rank tested</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ranktests.each do |ranktest| %>
  <tr>
    <td><%= ranktest.date.strftime("%m/%d/%Y") %></td>
    <td><%= Student.find(ranktest.student_id).fullname %></td>
    <td><%= Rank.find(ranktest.rank_id).name %></td>
    <td><%= link_to 'Show', ranktest %></td>
    <td><%= link_to 'Edit', edit_ranktest_path(ranktest) %></td>
    <td><%= link_to 'Delete', ranktest, :confirm => "Are you sure you want to delete the #{Rank.find(ranktest.rank_id).name} rank test for #{Student.find(ranktest.student_id).fullname}?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Rank Test', new_ranktest_path %>
<p></p>
